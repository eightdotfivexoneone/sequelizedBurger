<div class="container  p-5">

	<div class="row">

		<div class="col-md-12">
			<img src="/assets/img/burger.png" alt="burger" class="img-responsive center-block">
		</div>

		<div class="row">
			<div class="col-md-12 text-center">
				<form class="create-update-form" action="burgers/insertOne" method="POST">
						<div class="form-group">
								<label for="exampleInputEmail1"><H1>CREATE-DA-BURGER</H1></label>
								<input type="text"  name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Name Your Burger">
						</div>

						<div class="form-group">
								<button class="btn btn-success" type="submit">COOK IT!</button>
						</div>
			</form>
		</div>
	</div>

	<div class="col-md-12">
		<div class="row">
			<h1 class="display-1 text-light text-center">EAT-DA-BURGER</h1>
		</div>	
	</div>

	<div class="row">

		<div class="text-light text-center col-md-5">
			<h3>Uneaten Burgers</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<h5>{{this.id}}. {{this.burger_name}}
								<form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
									<input type='hidden' name='devoured' value='true'>
									<BR>
									<button type='submit' class="btn btn-success">EAT IT!</button>
								</form>
							</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-2"></div>

		<div class="text-light text-center col-md-5">
			<h3>Eaten Burgers</h3>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h5>{{this.id}}. {{this.burger_name}}</h5>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>

	<!-- end third row -->
	</div>

